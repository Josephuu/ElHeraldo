<!-- BIENVENIDA -->

<div class="container-fluid section1 text-white d-flex flex-column align-items-center justify-content-center">
    <div class="row justify-content-center mt-5 pt-4 mt-md-5 pt-md-4 pt-lg-0 mt-lg-0 pt-xl-0 mt-xl-0">
