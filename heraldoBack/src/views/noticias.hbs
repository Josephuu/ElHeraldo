<div class="container-fluid bg-dark">
    <div class="row justify-content-center border" style="background-color: #212529;">
        <h1
            class=" videos-h1-color text-white mt-sm-5 pt-sm-3 mt-md-5 pt-md-3 mt-lg-0 pt-lg-0 mt-xl-0 pt-xl-0 p-lg-1 p-xl-1">
            Noticias</h1>
    </div>
    <div class="row ">
        {{#each articleDoc}}
        <div class="col-sm-6 col-lg-4 p-0 bg-light border border-white">
            <a class="" href="/noticias/{{_id}}"><img class="section-news" src={{image}} alt="{{title}}"></a>
            <div class="container p-4">
                <h1 class="videos-h1-color" style="font-size:2rem;">{{title}}</h1>
                <span class="text-dark">
                    {{description}}
                </span>
            </div>
        </div>
        {{/each}}
    </div>
</div>